<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.system.studentmanagement">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_student_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_student_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.system.studentmanagement.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.system.studentmanagement.activity.ShowStudentsActivity" />
        <activity android:name="com.system.studentmanagement.activity.StudentActivity"/>

        <service android:name=".backgroundhandler.BackgroundService" />
        <service android:name=".backgroundhandler.BackgroundIntentService" />
    </application>

</manifest>