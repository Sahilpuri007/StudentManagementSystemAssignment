<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.system.studentmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_student_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_student_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.system.studentmanagement.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.system.studentmanagement.activities.StudentActivity" />
        <activity android:name="com.system.studentmanagement.activities.ShowStudentsActivity"/>
    </application>

</manifest>